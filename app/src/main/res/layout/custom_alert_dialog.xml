<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/alert_background"
    android:orientation="vertical"
    android:padding="16dp">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/ivAlertDialogImage"
        android:layout_width ="96dp"
        android:layout_height ="96dp"
        app:lottie_autoPlay ="true"
        app:lottie_loop ="true"
        android:layout_gravity="center"
        app:lottie_rawRes ="@raw/data"/>

    <TextView
        android:layout_marginVertical="8dp"
        android:id="@+id/tvAlertDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="32sp"
        android:gravity="center"
        tools:text="Deletar" />
    <TextView
        android:layout_marginVertical="8dp"
        android:gravity="center"
        android:id="@+id/tvAlertDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="Deletar definitivamente o item escolhido?" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAlertDialogOk"
            android:text="Ok"
            android:layout_marginEnd="5dp"
            style="@style/button_dialog"/>

        <Button
            android:id="@+id/btAlertDialogCancel"
            android:text="Cancel"
            android:layout_marginStart="5dp"
            style="@style/button_dialog"/>

    </LinearLayout>

</LinearLayout>