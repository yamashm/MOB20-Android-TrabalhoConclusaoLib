<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/alert_background"
    android:orientation="vertical"
    android:padding="16dp">
    <ImageView
        android:id="@+id/ivAlertDialogImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_gravity="center"
        tools:src="@mipmap/ic_launcher" />
    <TextView
        android:layout_marginVertical="8dp"
        android:id="@+id/tvAlertDialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="32sp"
        android:gravity="center"
        tools:text="Etanol" />
    <TextView
        android:layout_marginVertical="8dp"
        android:gravity="center"
        android:id="@+id/tvAlertDialogMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        tools:text="SugestÃ£o de abastecimento" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btCall"
            android:text="Ok"
            android:layout_marginEnd="5dp"
            style="@style/button_dialog"/>

        <Button
            android:id="@+id/btShare"
            android:text="Cancel"
            android:layout_marginStart="5dp"
            style="@style/button_dialog"/>

    </LinearLayout>

    <TextView
        android:clickable="true"
        android:focusable="true"
        android:padding="16dp"
        android:textSize="20sp"
        android:layout_marginVertical="8dp"
        android:gravity="center"
        android:id="@+id/btAlertDialogConfirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="OK" />
</LinearLayout>